/**
 * FIRESTORE SECURITY RULES
 * 
 * Core Philosophy: 
 * This ruleset implements a strict User-Ownership model. Most application data is 
 * organized hierarchically under individual user documents to ensure logical isolation 
 * and high performance for both authorization and queries.
 * 
 * Data Structure:
 * - /users/{userId}: Primary profile for each user.
 * - /users/{userId}/studySessions/{id}: Private study logs owned by the user.
 * - /users/{userId}/streaks/{id}: Private streak tracking owned by the user.
 * - /users/{userId}/syllabus/{id}: Private syllabus tracking owned by the user.
 * - /users/{userId}/assignments/{id}: Private assignment tracking owned by the user.
 * - /motivationalMessages/{id}: Global collection for public motivational content.
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    /**
     * Checks if the request is from a signed-in user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the user is the owner and the document currently exists.
     * Used for destructive operations (update, delete).
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // --- COLLECTION RULES ---

    /**
     * @description Rules for UserProfile documents.
     */
    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      /**
       * @description Rules for StudySessions.
       */
      match /studySessions/{studySessionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Rules for user streaks.
       */
      match /streaks/{streakId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Rules for user syllabus topics.
       */
      match /syllabus/{syllabusId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Rules for user assignments.
       */
      match /assignments/{assignmentId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }
    }

    /**
     * @description Rules for Motivational Messages. These are public records for all users to see.
     */
    match /motivationalMessages/{motivationalMessageId} {
      allow get, list: if true;
      allow create, update, delete: if false; 
    }
  }
}