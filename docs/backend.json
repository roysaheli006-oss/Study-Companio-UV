
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile information and preferences.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "studyStyle": {
          "type": "string",
          "description": "The user's preferred study style (e.g., visual, auditory, kinesthetic)."
        },
        "subjects": {
          "type": "array",
          "description": "An array of subjects the user is studying.",
          "items": {
            "type": "string"
          }
        },
        "stressHabits": {
          "type": "string",
          "description": "Description of users stress habits."
        }
      },
      "required": [
        "id",
        "fullName",
        "email"
      ]
    },
    "SyllabusItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SyllabusItem",
      "type": "object",
      "description": "Represents a specific topic within a subject's syllabus.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "topic": {
          "type": "string"
        },
        "isCompleted": {
          "type": "boolean"
        }
      },
      "required": ["id", "userId", "subject", "topic", "isCompleted"]
    },
    "Assignment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Assignment",
      "type": "object",
      "description": "Represents a study assignment or task.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        },
        "isCompleted": {
          "type": "boolean"
        }
      },
      "required": ["id", "userId", "subject", "title", "isCompleted"]
    },
    "StudySession": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "StudySession",
      "type": "object",
      "description": "Represents a single study session.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the study session."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserProfile."
        },
        "timestamp": {
          "type": "string",
          "description": "The date and time the study session started.",
          "format": "date-time"
        },
        "duration": {
          "type": "number",
          "description": "The duration of the study session in minutes."
        },
        "subject": {
          "type": "string",
          "description": "The subject studied during the session."
        },
        "topic": {
          "type": "string",
          "description": "The specific topic studied during the session."
        },
        "mood": {
          "type": "string",
          "description": "The user's mood during the session."
        },
        "stressLevel": {
          "type": "string",
          "description": "The user's stress level during the session."
        }
      },
      "required": [
        "id",
        "userId",
        "timestamp",
        "duration",
        "subject"
      ]
    },
    "Streak": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Streak",
      "type": "object",
      "description": "Represents a user's study streak.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the streak."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserProfile."
        },
        "startDate": {
          "type": "string",
          "description": "The date the streak started.",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "description": "The date the streak ended.",
          "format": "date-time"
        },
        "streakDays": {
          "type": "number",
          "description": "The number of consecutive days in the streak."
        }
      },
      "required": [
        "id",
        "userId",
        "startDate",
        "streakDays"
      ]
    },
    "MotivationalMessage": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MotivationalMessage",
      "type": "object",
      "description": "Represents a motivational message tailored to a specific stress level.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the motivational message."
        },
        "stressLevel": {
          "type": "string",
          "description": "The stress level this message is intended for (Low, Moderate, High)."
        },
        "message": {
          "type": "string",
          "description": "The motivational message text."
        }
      },
      "required": [
        "id",
        "stressLevel",
        "message"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profile information."
        }
      },
      {
        "path": "/users/{userId}/syllabus/{syllabusId}",
        "definition": {
          "entityName": "SyllabusItem",
          "schema": {
            "$ref": "#/backend/entities/SyllabusItem"
          },
          "description": "Stores syllabus topics for a specific user."
        }
      },
      {
        "path": "/users/{userId}/assignments/{assignmentId}",
        "definition": {
          "entityName": "Assignment",
          "schema": {
            "$ref": "#/backend/entities/Assignment"
          },
          "description": "Stores assignments for a specific user."
        }
      },
      {
        "path": "/users/{userId}/studySessions/{studySessionId}",
        "definition": {
          "entityName": "StudySession",
          "schema": {
            "$ref": "#/backend/entities/StudySession"
          },
          "description": "Stores study session data."
        }
      },
      {
        "path": "/users/{userId}/streaks/{streakId}",
        "definition": {
          "entityName": "Streak",
          "schema": {
            "$ref": "#/backend/entities/Streak"
          },
          "description": "Stores streak data."
        }
      },
      {
        "path": "/motivationalMessages/{motivationalMessageId}",
        "definition": {
          "entityName": "MotivationalMessage",
          "schema": {
            "$ref": "#/backend/entities/MotivationalMessage"
          },
          "description": "Stores motivational messages."
        }
      }
    ]
  }
}
